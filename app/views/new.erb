<div class='page-header'>
   <h1>New Film</h1>
</div>

<form action="/films" method="post">

  <div class="form-group">
    <input type="hidden" name="_method" value="PUT" />
  </div>

  <div class="form-group">
    <label>Title</label>
    <input type='text' name='film[title]' class='form-control' placeholder="Title"/><br/>
  </div>

  <div class="form-group">
    <label>Year</label>
    <input type='text' name='film[year]' class='form-control' placeholder="Year"/><br/>
  </div>

  <div class="form-group">
    <label>Box Office Sales</label>
    <input type='text' name='film[box_office_sales]' class='form-control' placeholder="Box Office Sales"/><br/>
  </div>

  <div class="form-group">
    <label>Genre</label>
    <input type='text' name='film[genre]' class='form-control' placeholder="Genre"/><br/>
  </div>

  <div class="form-group">
    <label>Director</label>
    <input type='text' name='film[director]' class='form-control' placeholder="Director"/><br/>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>